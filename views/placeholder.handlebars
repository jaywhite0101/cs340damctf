<!-- Generic placeholder form -->
<div class="form-container">
    <h2>Sample Form</h2>
    <form class="placeholder-form">
        {{#if isTeams}}
            <label for="teamName">Team Name:</label><br>
            <input type="text" id="teamName" name="teamName" placeholder="Enter team name" disabled><br>
            
            <label for="teamCreationDate">Creation Date:</label><br>
            <input type="date" id="teamCreationDate" name="teamCreationDate" disabled><br>
        {{/if}}
        
        {{#if isParticipants}}
            <label for="username">Username:</label><br>
            <input type="text" id="username" name="username" placeholder="Enter username" disabled><br>
            
            <label for="email">Email:</label><br>
            <input type="email" id="email" name="email" placeholder="Enter email" disabled><br>
            
            <label for="team">Team:</label><br>
            <select id="team" name="team" disabled>
                <option value="">Select a team</option>
                <option value="1">Team Alpha</option>
                <option value="2">Team Beta</option>
            </select><br>
        {{/if}}
        
        {{#if isChallenges}}
            <label for="challengeName">Challenge Name:</label><br>
            <input type="text" id="challengeName" name="challengeName" placeholder="Enter challenge name" disabled><br>
            
            <label for="difficulty">Difficulty:</label><br>
            <select id="difficulty" name="difficulty" disabled>
                <option value="">Select difficulty</option>
                <option value="Easy">Easy</option>
                <option value="Medium">Medium</option>
                <option value="Hard">Hard</option>
            </select><br>
            
            <label for="maxPoints">Max Points:</label><br>
            <input type="number" id="maxPoints" name="maxPoints" placeholder="Enter max points" disabled><br>
        {{/if}}
        
        <button type="button" class="disabled-btn" disabled>Submit (Disabled)</button>
    </form>
</div>

